{
    "jest": {
        "testEnvironment": "node",
        "coveragePathIgnorePatterns": [
            "/node_modules/"
        ],
        "collectCoverage": true,
        "coverageReporters": [
            "html"
        ]
    },
    "scripts": {
         "test": "jest -i test/*.js -t",
        "test:report": "jest -i test/*.js -t --reporters='default' --reporters='jest-html-reporters'",
        "test:coverage": "jest -i test/*.js -t --coverage"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.9.6",
        "babel-jest": "^26.0.1",
        "jest": "^26.0.1"
    },
    "dependencies": {
        "body-parser": "^1.19.0",
        "express": "^4.17.1",
        "supertest": "^4.0.2"
    }
}
